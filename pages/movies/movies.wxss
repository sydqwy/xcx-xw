/* pages/movies/movies.wxss */
@import "movie-list-template/movie-list-template.wxss";
.movie-list-template-container{
  background-color: #f2f2f2;
}
.movie-template{
  background-color:#fff;
  margin-bottom: 20rpx;
}

.search{
  background-color: #f2f2f2;
  height:80rpx;
  width:100%;
  display:flex;
  flex-direction:row;
}

.search-img{
  margin:auto 0 auto 20rpx;
}

.placeholder{
  font-size:24rpx;
  color:#d1d1d1;
  margin-left:20rpx;
}

.search input{
  height:100%;
  width:600rpx;
  margin-left:20px;
  font-size:28rpx;
}

.search-channel{
  position:absolute;
  top:80rpx;
}

.search image{
  height:30rpx;
  width:30rpx;
  margin:auto 0 auto 10rpx;
}