.content{
  display:flex;
  flex-direction: column;
  margin-top:20rpx;
  margin-bottom: 30rpx;
  background-color:#fff;
  border-bottom: 1px solid #ededed;
  border-top:1px solid #ededed;
  padding-bottom: 5px;
}

.time-day{
  margin-left:30rpx;
  vertical-align: middle;
  margin-bottom: 10rpx;
  font-size:30rpx;
}

.img-time{
  margin:10rpx 0rpx 20rpx 10rpx;
}

.text-title{
  font-size:30rpx;
  font-weight: bold;
  color:#333;
  margin-bottom: 5px;
  margin-left:10px;
}

.text-image{
  margin-left:15rpx;
  height:300rpx;
  width:100%;
  margin:auto 0rpx;
  margin-bottom:10px;
}

.text-article{
  font-size:30rpx;
  margin-left:20rpx;
  margin-bottom:5px;
  letter-spacing: 3rpx;
  color:cyan;
  line-height:50rpx;
}

.text-pz{
  font-size: 13px;
  flex-direction: row;
  margin-left:16rpx;
  height-line:20px;
}

.text-pl,.text-dz{
  width:20px;
  height:20px;
  margin-left:20rpx;
  border-radius: 50%;
  vertical-align:middle;
  line-height: 20px;
  align-items: center;
  margin:0rpx;
}

.text-pls,.text-dzs{
  margin-left:10rpx;
  vertical-align: middle;
  line-height:20px;
  margin-right:20px;
}