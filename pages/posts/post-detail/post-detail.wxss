.content{
  display:flex;
  flex-direction: column;
}
.bj-img{
  width:100%;
  height:250px;
}

.content-div{
  flex-direction: row;
  margin-top:10px;
}

.user-img{
  margin-left: 10px;
  width:30px;
  height:30px;
  border-radius: 50%;
  vertical-align: middle;
}

.content-div text{
  font-size:15px;
  font-family: sans-serif;
  margin-left:10px;
  vertical-align: middle;
}

.content-title{
  margin-top:5px;
  margin-left:20px;
  letter-spacing: 5px;
  font-weight: 500;
}

.tool{
  margin-top:5px;
}

.content-img image{
  vertical-align: middle;
  width:50px;
  height:50px;
  float:right;
  margin-right:40px;
  border-radius: 5px;
}

.xian{
  margin:0px auto;
  width:100%;
  height:4px;
  background-color: #e5e5e5;
  position: relative;
  top:45rpx;
  z-index: -99;
  vertical-align: middle;
}

.text-detail{
  line-height: 44px;
  color:#666;
  margin-top:5px;
  margin-left:10px;
  margin-right:10px;
  letter-spacing: 2px;
  font-size: 25rpx;
}

.tb{
  width:200rpx;
  height:200rpx;
  position:absolute;
  z-index:99px;
  vertical-align: middle;
  left:50%;
  margin-left:-100rpx;
  top:150rpx;
  opacity: 0.6;
}